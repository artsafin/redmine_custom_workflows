<% html_title(l(:trigger_workflows)) -%>

<div class="contextual">
  <%= link_to l(:trigger_modules), trigger_modules_path, :class => 'icon icon-import' %>
  <%= link_to l(:trigger_buttons), trigger_buttons_path, :class => 'icon icon-add' %>
</div>

<p>
  <%= link_to l(:new_trigger_workflow), new_trigger_workflow_path, :class => 'icon icon-add' %>
</p>

<h2><%=l(:trigger_workflows)%></h2>

<div class="autoscroll">
  <% if @workflows.any? %>
    <table class="trigger-workflows list">
      <thead>
      <tr>
        <th><%= l(:field_module) %></th>
        <th><%= l(:field_name) %></th>
        <th><%= l(:field_comment) %></th>
        <th><%= l(:is_file) %></th>
        <th><%= l(:is_enabled) %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @workflows.each do |workflow| %>
        <tr>
          <td><%= link_to(workflow.trigger_workflow_module.name, edit_trigger_module_path(workflow.trigger_workflow_module)) %></td>
          <td><%= link_to(workflow.name, edit_trigger_workflow_path(workflow)) %></td>
          <td><%= workflow.comment %></td>
          <td><%= workflow.is_file ? workflow.on_click : l(:trigger_not_file) %></td>
          <td><%= workflow.is_enabled %></td>
          <td>
            <%= link_to(l(:button_delete), workflow, :class => 'icon icon-del', :data => {:confirm => l(:text_are_you_sure)}, :confirm => l(:text_are_you_sure), :method => :delete) %>
            <br>
            <%= link_to(l(:button_edit), edit_trigger_workflow_path(workflow), :class => 'icon icon-edit') %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="nodata"><%= l(:label_no_data) %></p>
  <% end %>
</div>
